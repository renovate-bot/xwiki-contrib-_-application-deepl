    <property>
      <code>{{velocity}}
## Check first if there is a restriction on the objects of the current document and if the document needs to be translated
## When the document locale is null, we need to rely on the default wiki locale
#set($needsTranslation = $xcontext.locale.equals($doc.locale) || ("$!{doc.locale}" == '' &amp;&amp; !$xcontext.locale.equals($doc.defaultLocale)))
#set($hasObject = "$!{wikimacro.parameters.classSelector}" == '' || $doc.getObjects($wikimacro.parameters.classSelector).size() &gt; 0)
#if ($hasObject &amp;&amp; $needsTranslation)
  $xwiki.jsx.use('DeepL.Code.DeepLTranslationJSX')
  {{html clean="false"}}
    &lt;a href="#"
       class="deeplTranslationToggle $!{escapetool.xml($wikimacro.parameters.extraCssClasses)}"
       data-cssSelector="$!{escapetool.xml($wikimacro.parameters.cssSelector)}"
       data-classSelector="$!{escapetool.xml($wikimacro.parameters.classSelector)}"
       data-formToken="$!{escapetool.xml($services.csrf.token)}"
       data-locale="$!{escapetool.xml($xcontext.locale)}"&gt;
       $services.localization.render('deeplTranslation.link.text', [$xcontext.locale.getDisplayLanguage($xcontext.locale)])
    &lt;/a&gt;
  {{/html}}
#end
{{/velocity}}</code>
